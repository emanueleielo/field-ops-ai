# Application Settings
APP_NAME="FieldOps AI API"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database (Supabase Postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fieldops

# Security
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
API_KEY_HEADER=X-API-Key

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AI Services - LLM Fallback Chain
# Primary: Claude 3.5 Haiku (Anthropic)
# Fallback 1: GPT-4o-mini (OpenAI)
# Fallback 2: Gemini Flash (Google)
# Configure at least one, preferably all for resilience
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# Qdrant Vector Store (Cloud free tier)
QDRANT_URL=https://xxx.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key

# Stripe Payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Supabase Storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key
